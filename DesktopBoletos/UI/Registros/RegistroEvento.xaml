<Window x:Class="DesktopBoletos.UI.Consultas.RegistroEvento"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:local="clr-namespace:DesktopBoletos.UI.Registros"
    mc:Ignorable="d"
    Title="Gestor de Eventos" Height="600" Width="900" Icon="\Img\Icono.png"
    WindowStartupLocation="CenterScreen"
    Background="{StaticResource MaterialDesignPaper}"
    Foreground="{StaticResource MaterialDesignBody}">

    <StackPanel>
        <Menu>
            <Button Click="Back_Click" Style="{StaticResource MaterialDesignIconForegroundButton}"
                ToolTip="MaterialDesignIconForegroundButton"
                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}">
                <Button.Background>
                    <ImageBrush ImageSource="\Img\BackIcon.ico" />
                </Button.Background>
            </Button>
        </Menu>

        <StackPanel Orientation="Vertical" Margin="10" HorizontalAlignment="Center">
            <StackPanel HorizontalAlignment="Center">
                <Label Content="Registro de Eventos" FontSize="30" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,10">

                <TextBox x:Name="IdTextBox" Text="{Binding EmpleadoId}" Width="80" Height="50"
                    FontSize="16" IsReadOnly="true"
                    materialDesign:HintAssist.Hint="Id"
                    Style="{StaticResource MaterialDesignFilledTextBox}"
                    AcceptsReturn="True"
                />

                <Button Content="🔍" FontSize="16" Margin="5,0" Height="50"
                    Click="ConsultarButton_Click"
                    Style="{StaticResource MaterialDesignOutlinedLightButton}"
                    ToolTip="MaterialDesignOutlinedButton"
                />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBox x:Name="NombreTextBox" Text="{Binding Nombre}" Width="400" Height="50" FontSize="16"
                    materialDesign:HintAssist.Hint="Nombre"
                    Style="{StaticResource MaterialDesignFilledTextBox}"
                    VerticalAlignment="Top"
                    AcceptsReturn="True"
                    TextWrapping="Wrap"
                />
            </StackPanel>

            <StackPanel HorizontalAlignment="Center" Margin="0,5">
                <TextBox x:Name="DescripcionTextBox" Text="{Binding Descripcion}" Width="800" Height="100"
                    FontSize="16" MinWidth="700" VerticalScrollBarVisibility="Auto"
                    AcceptsReturn="True" TextWrapping="Wrap"
                    materialDesign:HintAssist.Hint="Descripción"
                    Style="{StaticResource MaterialDesignFilledTextBox}"
                />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <DatePicker x:Name="FechaTextBox" FontSize="16" Width="150" Height="50"
                    materialDesign:HintAssist.Hint="Fecha"
                    SelectedDate="{Binding FechaNacimiento, StringFormat='HH:mm:ss'}"
                    Style="{StaticResource MaterialDesignFilledDatePicker}"
                />
            </StackPanel>

            <StackPanel Margin="0,20,0,0" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Nuevo" Height="35" Width="130" FontSize="16" Margin="10,2"
                    Click="NuevoButton_Click"
                    Style="{StaticResource MaterialDesignFlatLightBgButton}"
                    ToolTip="MaterialDesignFlatLightButton"
                    materialDesign:ShadowAssist.ShadowDepth="Depth2"
                />
                <Button Content="Guardar" Height="35" Width="130" FontSize="16" Margin="10,2"
                    Click="GuardarButton_Click"
                    Style="{StaticResource MaterialDesignFlatMidBgButton}"
                    ToolTip="MaterialDesignFlatMidButton"
                    materialDesign:ShadowAssist.ShadowDepth="Depth2"
                />
                <Button Content="Eliminar" Height="35" Width="130" FontSize="16" Margin="10,2"
                    Click="EliminarButton_Click"
                    Style="{StaticResource MaterialDesignFlatDarkBgButton}"
                    ToolTip="MaterialDesignFlatDarkButton"
                    materialDesign:ShadowAssist.ShadowDepth="Depth2"
                />
            </StackPanel>
        </StackPanel>
    </StackPanel>
</Window>